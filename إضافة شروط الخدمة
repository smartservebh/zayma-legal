const CodeBlock = ({ title, code }) => {
    const [copied, setCopied] = useState(false);

    const handleCopy = () => {
        navigator.clipboard.writeText(code);
        setCopied(true);
        setTimeout(() => setCopied(false), 2000);
    };

    return (
        <Card>
            <CardHeader className="flex flex-row items-center justify-between p-4 bg-gray-50">
                <CardTitle className="text-lg">{title}</CardTitle>
                <Button variant="ghost" size="icon" onClick={handleCopy}>
                    {copied ? <Check className="w-5 h-5 text-green-500" /> : <Clipboard className="w-5 h-5" />}
                </Button>
            </CardHeader>
            <CardContent className="p-0">
                <Textarea 
                  readOnly 
                  value={code} 
                  className="h-96 font-mono text-sm bg-gray-900 text-gray-100 rounded-t-none border-0 focus-visible:ring-0" 
                />
            </CardContent>
        </Card>
    );
};

export default function LegalCodePage() {
    return (
        <div className="p-4 sm:p-6 md:p-8 space-y-8 bg-gray-100 min-h-screen" dir="ltr">
            <div className="text-center">
                <h1 className="text-3xl font-bold text-gray-800">HTML Code for Legal Pages</h1>
                <p className="text-gray-600 mt-2">
                  Copy the code for each page and add it to your GitHub repository as an `.html` file.<br />
                  (e.g., create a file named `terms.html` and paste the code inside).
                </p>
            </div>
            <CodeBlock title="1. Terms of Service (terms.html)" code={termsHtml} />
            <CodeBlock title="2. Privacy Policy (privacy.html)" code={privacyHtml} />
            <CodeBlock title="3. Refund Policy (refund.html)" code={refundHtml} />
        </div>
    );
}
